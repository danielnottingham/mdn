<%= mdn_shell do |shell| %>
  <% shell.with_navbar do %>
    <%= mdn_navbar(title: t(".navbar_title")) %>
  <% end %>

  <% shell.with_sidebar do %>
    <%= mdn_sidebar do |side| %>
      <% side.with_item(href: "#", icon: :wallet) { t(".menu_item_accounts") } %>
    <% end %>
  <% end %>

  <% shell.with_main_content do %>
    <%= mdn_main_content(title: t(".header_title")) do %>
      <%= render Accounts::ListComponent.new(accounts: accounts) %>

      <div class="mt-4">
        <%= mdn_button(builder: :link_to, href: new_account_path) { t(".new_account") } %>
      </div>
    <% end %>
  <% end %>
<% end %>
