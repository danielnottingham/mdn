<%= render Application::FrameComponent.new(current_user: current_user, current_controller: controller) do %>
  <%= mdn_main_content(title: t(".header_title")) do %>
    <%= render Accounts::FormComponent.new(account: account, url: account_path(account.id)) %>

    <div class="mt-4 flex gap-2">
      <%= mdn_button(href: accounts_path, color: :light) { t(".back_to_list") } %>

      <%= mdn_button(builder: :button_to, href: account_path(account), color: :red, method: :delete, data: { turbo: false, controller: "confirm", confirm_message_value: t(".destroy_confirm") }) do %>
        <%= t(".destroy") %>
      <% end %>
    </div>
  <% end %>
<% end %>
