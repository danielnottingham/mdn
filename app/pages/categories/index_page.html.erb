<%= render Application::FrameComponent.new(current_user: current_user, current_controller: controller) do %>
  <%= mdn_main_content(title: t(".header_title")) do |main| %>
    <% main.with_action do %>
      <%= mdn_button(size: :xs, href: new_category_path) do %>
        <%= mdn_icon(name: :plus, class: "h-5 w-5") %>
        <%= t(".new_category") %>
      <% end %>
    <% end %>
    <%= render Categories::ListComponent.new(categories: categories) %>
  <% end %>
<% end %>
