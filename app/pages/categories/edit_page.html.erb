<%= render Application::FrameComponent.new(current_user: current_user, current_controller: controller) do %>
  <%= mdn_main_content(title: t(".header_title", category: category.title)) do |main| %>
    <% main.with_action do %>
      <%= mdn_button(href: categories_path, size: :sm, color: :light, title: t(".back_to_list")) do %>
        <%= mdn_icon(name: :arrow_left, class: "h-5 w-5") %>
      <% end %>

      <%= mdn_button(builder: :button_to, href: category_path(category), size: :sm, color: :red, method: :delete, data: { turbo: false, controller: "confirm", confirm_message_value: t(".destroy_confirm") }) do %>
        <%= t(".destroy") %>
      <% end %>
    <% end %>

    <%= render Categories::FormComponent.new(category: category, url: category_path(category.id)) %>
  <% end %>
<% end %>
