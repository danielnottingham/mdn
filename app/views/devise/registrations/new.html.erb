<section class="bg-gray-50 dark:registration_pathbg-gray-900">
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
    <div class="flex items-center mb-6 text-4xl font-semibold text-gray-900 dark:text-white">
      <%= mdn_icon(name: :bolt, class: "h-11 w-11 text-indigo-500") %>
      MDN
    </div>
    <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
          <%= t(".page_title") %>
        </h1>

        <%= mdn_form_with(model: resource, as: resource_name, url: registration_path(resource_name), class: "space-y-4 md:space-y-6") do |f| %>
          <%= render Application::ErrorSummaryComponent.new(record: resource) %>
          <div class="field">
            <%= f.mdn_label :email, t(".email") %>
            <%= f.mdn_email_field :email, autofocus: true, autocomplete: "email", placeholder: "john.doe@gmail.com" %>
          </div>

          <div class="field">
            <%= f.mdn_label :password, t(".password") %>
            <%= f.mdn_password_field :password, autocomplete: "new-password", placeholder: "******" %>
          </div>

          <div class="field">
            <%= f.mdn_label :password_confirmation, t(".password_confirmation") %>
            <%= f.mdn_password_field :password_confirmation, autocomplete: "new-password", placeholder: "******" %>
          </div>

          <div class="actions">
            <%= f.mdn_submit t(".submit") %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="mt-4">
      <%= link_to t(".sign_in"), new_user_session_path, class: "font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
    </div>
  </div>
</section>
