<%= mdn_shell do |shell| %>
  <% shell.with_navbar do %>
    <%= mdn_navbar(title: t(".navbar_title")) do |nav| %>
      <% nav.with_item(builder: :button_to, href: destroy_user_session_path, method: :delete, data: { turbo: false }) { t(".log_out") } %>
    <% end %>
  <% end %>

  <% shell.with_sidebar do %>
    <%= mdn_sidebar do |side| %>
      <% side.with_item(href: accounts_path, icon: :building_library, active: activate_accounts_menu_item?) { t(".menu_item_accounts") } %>
      <% side.with_item(href: categories_path, icon: :tag, active: activate_categories_menu_item?) { t(".menu_item_categories") } %>
      <% side.with_item(href: transactions_path, icon: :currency_dollar, active: activate_transactions_menu_item?) { t(".menu_item_transactions") } %>
    <% end %>
  <% end %>

  <% shell.with_main_content do %>
    <%= content %>
  <% end %>
<% end %>
