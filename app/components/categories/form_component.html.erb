<div class="rounded border border-gray-200 bg-white p-4">
  <%= mdn_form_with(model: category, url: url, id: "category-form", data: { turbo: false }) do |f| %>
    <%= render Application::ErrorSummaryComponent.new(record: category) %>

    <div class="grid md:grid-cols-2 md:gap-6">
      <div class="flex flex-col gap-2">
        <%= f.mdn_label :title %>
        <%= f.mdn_text_field :title %>
      </div>

      <div class="flex flex-col gap-2">
        <%= f.mdn_label :color %>
        <%= f.mdn_color_field :color %>
      </div>
    </div>

    <div class="mt-4">
      <%= submit_button(f) %>
    </div>
  <% end %>
</div>
