<div class="rounded border border-gray-200 bg-white p-4">
  <%= mdn_form_with(model: transaction, url: url, id: "transaction-form", data: { turbo: false }) do |f| %>
    <%= render Application::ErrorSummaryComponent.new(record: transaction) %>
    <div class="flex flex-col gap-4">
      <div class="grid md:grid-cols-2 md:gap-6">
        <div class="mb-2 md:mb-0">
          <%= f.mdn_radio_button :transaction_type, TransactionTypes::EXPENSE, TransactionTypes.t(TransactionTypes::EXPENSE) %>
        </div>

        <div>
          <%= f.mdn_radio_button :transaction_type, TransactionTypes::INCOME, TransactionTypes.t(TransactionTypes::INCOME) %>
        </div>
      </div>

      <div class="grid md:grid-cols-2 md:gap-6">
        <div class="flex flex-col gap-2 mb-2 md:mb-0">
          <%= f.mdn_label :title %>
          <%= f.mdn_text_field :title %>
        </div>

        <div class="flex flex-col gap-2">
          <%= f.mdn_label :amount_cents %>
          <%= f.mdn_money_field :amount_cents %>
        </div>
      </div>

      <div class="grid md:grid-cols-2 md:gap-6">
        <div class="flex flex-col gap-2 mb-2 md:mb-0">
          <%= f.mdn_label :account_id %>
          <%= f.mdn_select :account_id, options: accounts.pluck(:title, :id), prompt: t(".account_prompt") %>
        </div>

        <div class="flex flex-col gap-2">
          <%= f.mdn_label :category_id %>
          <%= f.mdn_select :category_id, options: categories.pluck(:title, :id), prompt: t(".category_prompt") %>
        </div>
      </div>

      <div class="grid md:grid-cols-2 md:gap-6">
        <div class="flex flex-col gap-2 mb-2 md:mb-0">
          <%= f.mdn_label :transaction_date %>
          <%= f.mdn_date_field :transaction_date %>
        </div>

        <div class="flex flex-col gap-2">
          <%= f.mdn_label :payee %>
          <%= f.mdn_text_field :payee %>
        </div>
      </div>

      <div class="flex flex-col gap-2">
        <%= f.mdn_label :description %>
        <%= f.mdn_text_area :description %>
      </div>

      <div class="mt-2">
        <%= submit_button(f) %>
      </div>
    </div>
  <% end %>
</div>
