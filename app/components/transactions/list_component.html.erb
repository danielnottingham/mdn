<div class="m-2 p-4 ">
  <ol class="relative border-s border-gray-200">
    <% transactions.each do |transaction| %>
      <li class="mb-1 ms-6">
        <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700" style="background-color: <%= transaction.account.color %>"></div>

        <div class="items-center justify-between rounded-lg border border-gray-200 bg-white p-4 shadow-sm hover:bg-gray-50 sm:flex">
          <div class="text-sm font-normal text-gray-500">
            <a href="#" class="font-semibold text-gray-800 hover:underline"><%= transaction.title %></a>
            <% if transaction.expense? %>
              <span style="color: #ef4444;">-<%= transaction.amount.format %></span>
            <% else %>
              <span style="color: #22c55e;">+<%= transaction.amount.format %></span>
            <% end %>
          </div>
          <div class="flex flex-row items-center">
            <% if transaction.category %>
              <span class="me-2 rounded bg-gray-200 px-2.5 py-0.5 text-xs text-white font-normal" style="background-color: <%= transaction.category.color %>">
                <%= transaction.category.title %>
              </span>
              <% end %>
            <time class="mb-1 text-xs font-normal text-gray-400 sm:order-last sm:mb-0"><%= transaction.created_at.strftime("%d %b %y") %></time>
          </div>
        </div>
      </li>
    <% end %>
  </ol>
</div>
